# -*- mode: ruby -*-
# vi: set ft=ruby :

# Two-VM environment for CA3 Part 2
# - db: H2 database in server mode, exposed only to the app VM on port 9092
# - app: Spring Boot application connecting to db over private network

APP_IP = "192.168.244.167"
DB_IP  = "192.168.244.166"

Vagrant.configure("2") do |config|
  # Use the default insecure key so the first SSH connection succeeds
  config.ssh.insert_key = false

  # Mount the project root into /workspace
  config.vm.synced_folder "../..", "/workspace"

  # --- DB VM ---
  config.vm.define "db" do |db|
    db.vm.box = "bento/ubuntu-22.04"
    db.vm.hostname = "ca3-db"
    db.vm.network "private_network", ip: DB_IP

    # Use Vagrantâ€™s default key for initial SSH
    db.ssh.private_key_path = "~/.vagrant.d/insecure_private_key"

    # VMware & VirtualBox settings
    db.vm.provider :virtualbox do |vb|
      vb.cpus = 1
      vb.memory = 1024
    end
    db.vm.provider :vmware_desktop do |v|
      v.vmx["numvcpus"] = "1"
      v.vmx["memsize"]  = "1024"
    end

    # Copy your custom SSH public key inside the VM (handled by Vagrant shared folder)
    db.vm.provision "file", source: "C:/db_ssh.pub", destination: "/vagrant/db_ssh.pub"

    # Provision DB setup
    db.vm.provision "shell", path: "provision_db.sh", env: {
      "APP_IP" => APP_IP,
      "START_DB" => ENV.fetch("START_DB", "true"),
    }
  end

  # --- APP VM ---
  config.vm.define "app" do |app|
    app.vm.box = "bento/ubuntu-22.04"
    app.vm.hostname = "ca3-app"
    app.vm.network "private_network", ip: APP_IP

    # Use default Vagrant key for SSH
    app.ssh.private_key_path = "~/.vagrant.d/insecure_private_key"

    # Forward Spring Boot web port to host
    app.vm.network "forwarded_port", guest: 8080, host: 8080, host_ip: "127.0.0.1"

    # VMware & VirtualBox settings
    app.vm.provider :virtualbox do |vb|
      vb.cpus = 2
      vb.memory = 2048
    end
    app.vm.provider :vmware_desktop do |v|
      v.vmx["numvcpus"] = "2"
      v.vmx["memsize"]  = "2048"
    end

    # Copy your app public key
    app.vm.provision "file", source: "C:/app_ssh.pub", destination: "/vagrant/app_ssh.pub"

    # Provision App setup
    app.vm.provision "shell", path: "provision_app.sh", env: {
      "DB_IP" => DB_IP,
      "BUILD_APP" => ENV.fetch("BUILD_APP", "true"),
      "START_APP" => ENV.fetch("START_APP", "true"),
      "APP_PROJECT_DIR" => ENV.fetch("APP_PROJECT_DIR", "/workspace/CA2/Part2"),
    }
  end
end
