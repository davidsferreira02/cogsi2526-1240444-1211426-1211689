# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.ssh.insert_key = false
  config.vm.synced_folder "../..", "/workspace"
  config.dns.tld = "cogsi"

  # Shared SSH key locations
  DB_KEY_PATH  = "C:/db_ssh"
  APP_KEY_PATH = "C:/app_ssh"

  # --- DB VM ---
  config.vm.define "db" do |db|
    db.vm.box = "bento/ubuntu-22.04"
    db.vm.hostname = "ca3-db.cogsi"
    db.vm.network "private_network", type: "dhcp"

    db.ssh.private_key_path = DB_KEY_PATH

    db.vm.provision "shell",
      inline: %{
        mkdir -p /home/vagrant/.ssh
        echo '#{File.read("#{DB_KEY_PATH}.pub").strip}' >> /home/vagrant/.ssh/authorized_keys
        chown -R vagrant:vagrant /home/vagrant/.ssh
        chmod 700 /home/vagrant/.ssh
        chmod 600 /home/vagrant/.ssh/authorized_keys
      },
      run: "always"

    db.vm.provider :virtualbox do |vb|
      vb.cpus = 1
      vb.memory = 1024
    end
    db.vm.provider :vmware_desktop do |v|
      v.vmx["numvcpus"] = "1"
      v.vmx["memsize"]  = "1024"
    end

    db.vm.provision "shell", path: "provision_db.sh", env: {
      "START_DB" => ENV.fetch("START_DB", "true"),
    }
  end

  # --- APP VM ---
  config.vm.define "app" do |app|
    app.vm.box = "bento/ubuntu-22.04"
    app.vm.hostname = "ca3-app.cogsi"
    app.vm.network "private_network", type: "dhcp"
    app.vm.network "forwarded_port", guest: 8080, host: 8080, host_ip: "127.0.0.1"

    app.ssh.private_key_path = APP_KEY_PATH

    app.vm.provision "shell",
      inline: %{
        mkdir -p /home/vagrant/.ssh
        echo '#{File.read("#{APP_KEY_PATH}.pub").strip}' >> /home/vagrant/.ssh/authorized_keys
        chown -R vagrant:vagrant /home/vagrant/.ssh
        chmod 700 /home/vagrant/.ssh
        chmod 600 /home/vagrant/.ssh/authorized_keys
      },
      run: "always"

    app.vm.provider :virtualbox do |vb|
      vb.cpus = 2
      vb.memory = 2048
    end
    app.vm.provider :vmware_desktop do |v|
      v.vmx["numvcpus"] = "2"
      v.vmx["memsize"]  = "2048"
    end

    app.vm.provision "shell", path: "provision_app.sh", env: {
      "DB_HOST" => "ca3-db.cogsi",
      "BUILD_APP" => ENV.fetch("BUILD_APP", "true"),
      "START_APP" => ENV.fetch("START_APP", "true"),
      "APP_PROJECT_DIR" => ENV.fetch("APP_PROJECT_DIR", "/workspace/CA2/Part2"),
    }
  end
end
